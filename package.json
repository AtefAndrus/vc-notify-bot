{
  "name": "vc-notify-bot",
  "version": "1.0.0",
  "description": "Discord VC参加通知Bot - リアルタイムでボイスチャンネル参加を検知し、柔軟なルールベースで通知を送信",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "test": "bun typecheck && bun test",
    "typecheck": "tsc --noEmit",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "keywords": [
    "discord",
    "bot",
    "voice-channel",
    "notification",
    "discord.js"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.16.3"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
